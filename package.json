{
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "link": "lerna exec -- jupyter labextension link . --no-build",
    "prettier":
      "prettier --write '{!(package),packages/*/!(package),packages/*/!(lib)/**}{.js,.jsx,.ts,.tsx,.css,.json,.md}'",
    "precommit": "lint-staged",
    "publish": "lerna publish --git-remote sparkboom",
    "watch": "lerna run watch"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.5.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.11.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "resolutions": {
    "@types/react": "16.3.13",
    "@types/react-dom": "16.0.3"
  },
  "workspaces": ["packages/*"],
  "lint-staged": {
    "{!(package),packages/*/!(package),packages/*/!(lib)/**}{.js,.jsx,.ts,.tsx,.css,.json,.md}": [
      "prettier --write",
      "git add"
    ]
  }
}
